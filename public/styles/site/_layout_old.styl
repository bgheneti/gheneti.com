#header
	margin-top: 30px


#footer
	margin-top: 30px
	border-top: 1px solid gray-lighter
	padding-top: 30px
	color: gray-light


.gallery-image img
	display: block
	max-width: 100%
	height: auto


body
	padding-top: 50px
	background-color: #F9F9F9

.nav
	font-size: 18px
	font-family: 'Roboto'

.page-header
	margin-top: 0px
	margin-bottom: 50px
	border-bottom: 2px solid #BAC0BC

.post-cols
	-moz-column-count: 3
	-moz-column-gap: 3%
	-moz-column-width: 30%
	-webkit-column-count:3
	-webkit-column-gap: 3%
	-webkit-column-width: 30%
	column-count: 3
	column-gap: 3%
	column-width: 30%

#post-container
	width: 100%
	max-width: 700px
	margin: 2em auto

.post-icon 
	background-color: white
	clear: both
	padding: 3px
	margin: 5px
	width: 32.5%
	float: left
	a:hover
		text-decoration: none
		color: #333

	img
		height: auto
		max-height: 100%
		width: auto
		max-width: 100%

.category-filter
	h4
		margin-left: -13px

#category-list
	display: inline-block
	float: right
	margin-right: -20px
	.list-group-item
		border-radius: 0px
		display: inline-block
		margin-right: -4px
	.list-group-item:first-child
		border-top-left-radius: 4px
		border-bottom-left-radius: 4px
	.list-group-item:last-child
		border-top-right-radius: 4px
		border-bottom-right-radius: 4px

.contact-form-submit
	padding-left: 8px

.navbar-default
	background-color: #BAC0BC
	.navbar-brand
		color: #1F3948
		font-weight: bold
	.navbar-nav 
		li a
			color: #1F3948
		li a:hover
			color: #777
		.active a
			background-color: #C4312A
			color: #FFFFFF
		.active a:hover
			background-color: #C4312A
			color: #FFFFFF

#footer
	border-top: 2px solid #BAC0BC
	margin-top: 200px
